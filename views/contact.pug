block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    h1 Contact Form
    form(action="/contact",method="post" class="myForm")
        input(type="text",class="inputForm",name="name",placeholder="Enter your name:") 
        input(type="date", class="inputForm",name="date",placeholder="Enter date of birth")
        input(type="number",class="inputForm",name="age",placeholder="Enter your age:") 
        input(type="number",class="inputForm",name="weight",placeholder="Enter your weight:")  
        input(type="address",class="inputForm",name="address",placeholder="Enter your address:")
        input(type="email",class="inputForm",name="email",placeholder="Enter your email:") 
        textarea(name="concern" class="inputForm" cols="30" rows="10" placeholder="Enter your concern:")
        button(class="btn")
